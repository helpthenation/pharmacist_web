    <template id="theme_pharmacistplace_sort" inherit_id="website_sale.sort" name="Theme Pharmacistplace Show Sort by">
        <xpath expr="//div[hasclass('dropdown_sorty_by')]" position="replace">
        </xpath>
        <xpath expr="//div[@id='products_grid']/table" position="before">
            <t t-set="list_price_desc_label">
                <span class="fa fa-sort-amount-desc"></span>
                <span>Price</span>
            </t>
            <t t-set="list_price_asc_label">
                <span class="fa fa-sort-amount-asc" ></span>
                <span>Price</span>
            </t>
            <t t-set="name_asc_label">
                <span>Product Name</span>
            </t>
            <t t-set="website_sale_sortable" t-value="[
                (list_price_desc_label, 'list_price desc'),
                (list_price_asc_label, 'list_price asc'),
                (name_asc_label, 'name asc')
            ]"/>
            <t t-set="website_sale_sortable_dict" t-value="dict(website_sale_sortable)"/>
            <t t-set="order_by_value" t-value="request.params.get('order', False)"/>
            <div class="mb32" style=" display: flex;">
                <div class="col-md-3 dropdown_sorty_by pp-bg-primary" style="text-transform: uppercase;padding: 10px 0px;    text-align: center;" >
                    <div class="pp-text-white" style="text-transform: uppercase;    position: relative;    display: inline-block;    vertical-align: middle;padding: 7px 0px 6px 12px;">Sort by: </div>
                    <div class="dropdown btn-group">
                        <a href="#" class="btn" data-toggle="dropdown">
                            <t t-if="order_by_value and order_by_value in website_sale_sortable_dict.values()" t-raw="website_sale_sortable_dict.keys()[website_sale_sortable_dict.values().index(order_by_value)]"/>
                            <t t-else="" t-set="order_by_value" t-value="False"/>
                            <t t-if="not order_by_value">
                                <span>Default</span>
                            </t>
                            <!-- <span class="caret"></span> -->
                            <span class="fa fa-angle-down" style="margin-left:5px;"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li t-foreach="website_sale_sortable" t-as="sortby">
                                <a t-att-href="keep('/shop', order=sortby[1])">
                                    <span t-raw="sortby[0]"/>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

